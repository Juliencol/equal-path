  <div class="cards-container">
    <div class="card-prod ">
      <% @jobs.each do |job| %>
        <div class="card-product" data-aos="flip-left">
          <img src=<%= job.job_photo %> />
          <div class="card-product-infos">
            <h2><%= job.title %> (<%= job.field %>)</h2>
            <h5><%= job.short_description %></h5>
              <% job_skills_user = job.skills.select{|skill| @user.skills.include? skill}.first(3) %>
            <% if job_skills_user.count == 0 %>
              <h5> <strong> Vous n'avez pas les comp√©tences n√©cessaires pour ce job !</strong> </h5>
            <% else %>
              <h5><strong>Vous avez d√©ja <%= (job_skills_user.count.to_f / job.skills.count.to_f * 100).round %> % des comp√©tences pour atteindre le job de vos r√™ves ! </strong> Voici quelques exemples: </h5>
              <div class="job-skills">
                <div class="job-skill-user-check">
                  ‚úÖ
                </div>

                <div class="job-skills-user">
                  <ul>
                    <% job_skills_user.each do |user_skill| %>
                      <li><%= user_skill.name.capitalize%></li>
                    <% end %>
                  </ul>
                </div>

                <div class="job-skill-user-red-check">
                  ‚ùå
                </div>

                <div class="job-skills-not-user">
                  <% job_skills_not_user = job.skills.select{|skill| @user.skills.exclude? skill}.first(3) %>
                  <ul>
                    <% job_skills_not_user.each do |user_not_skill| %>
                      <li> <%= user_not_skill.name.capitalize%></li>
                    <% end %>
                  </ul>
                </div>

              </div>
            <% end  %>
          </div>

          <% if job.bookmarked %>
            <%= link_to job_bookmark_job_path(job), method: :post, remote: true do  %>
              <i class="fas fa-star stars" id="star<%= job.id %>"></i>
            <% end %>
          <% else %>
            <%= link_to job_bookmark_job_path(job), method: :post, remote: true  do %>
              <i class="far fa-star stars" id="star<%= job.id %>"></i>
            <% end %>
          <% end %>
          <%= link_to "", job_path(job), class: "transparent-link" %>
        <i class="fas fa-ellipsis-h" id="three-dot"></i>
        </div>
      <% end  %>
    </div>
