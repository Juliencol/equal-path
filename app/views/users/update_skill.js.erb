<% if @skill_destroyed_id %>
  skillId = '<%= @skill_destroyed_id %>'
  // console.log('<%= @skill_destroyed_id %>')
  skill = document.querySelector(`.skill-${skillId}`)
  skill.classList.add("skill-btn")
  skill.classList.remove("user-skill-btn")
<% end %>

<% if @skill_created_id %>
  skillId = '<%= @skill_created_id %>'
  // console.log(`.skill-${skillId}`)
  skill = document.querySelector(`.skill-${skillId}`)
  // console.log(skill)
  skill.classList.remove("skill-btn")
  skill.classList.add("user-skill-btn")
<% end %>
