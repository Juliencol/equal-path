<div id="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dovu27lye/image/upload/v1567157562/mark-cruz-VW2oU66mwbc-unsplash_yp9mfc.jpg);">
  <div class="container text-center">
    <h1 class="mb-3">Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
    <div class="mt-3">
      <%= cl_image_tag current_user.profile_picture, id: "user_image", alt: "" %>
    </div>
    <p class="mt-3">Age: <%= @user.age %> ans</p>
    <p class="mt-3"><%= @user.email %></p>
  </div>
</div>

