<div class="row">

  <div class="banner-show-user col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @job.job_photo %>);">

    <% if @job.bookmarked %>
      <%= link_to job_bookmark_job_path(@job), method: :post, remote: true do %>
        <i class="fas fa-bookmark" id="star-user-show-two"></i>
      <% end %>
    <% else %>
      <%= link_to job_bookmark_job_path(@job), method: :post, remote: true do %>
        <i class="far fa-bookmark" id="star-user-show-two"></i>
      <% end %>
    <% end %>
  </div>

  <div class="user-container text-center">
    <h1 class="text-center pb-4" style = "letter-spacing: 5px"><%= @job.title %></h1>
    <ul class="list-inline tabs-underlined justify-content-center mb-4 pb-4" style="font-size: 19px">
      <li>
        <a href="#" class="tab-underlined active" data-target="Fiche">Fiche m√©tier</a>
      </li>
      <li>
        <a href="#" class="tab-underlined" data-target="Formations">Formations</a>
      </li>
      <li>
        <a href="#" class="tab-underlined" data-target="Mentors">Mentors</a>
      </li>
    </ul>









    <div class="tab-content" id="Fiche">
        <h4 class = "mb-4 text-center">  <strong> Quel est le m√©tier de <%= @job.title %> ? </strong></h4>
        <p class="text-justify mb-5" style="font-size: 19px"><%= @job.long_description %></p>
          <div class="mb-3 container d-flex flex-column">
            <h4 class = "mb-4 text-center">  <strong> Etre <%= @job.title %>, c'est maitriser : </strong></h4>

            <div class="container d-flex mt-5 justify-content-center flex-wrap">
                  <% @job.skills.each do |skill| %>
                    <div class="d-flex justify-content-around">
                      <% if @user.skills.include? skill %>
                       <button class="btn btn-outline-success m-2" data-toggle="modal" data-target="#skill-modal-<%= skill.id %>">
                           <%= skill.name %>
                        </button>
                      <% end  %>
                    </div>
                    <!-- modal -->
                    <div class="modal fade" id="skill-modal-<%= skill.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-body text-center">
                             <h1 class="m-3"><%= skill.name %></h1>
                              <img id="skill-logo" class="m-3" src=<%= skill.logo %>>
                                <p class="m-3"><%= skill.description %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- fin modal -->
                  <% end %>


                <% @job.skills.each do |skill| %>
                  <div class="d-flex justify-content-around">
                    <% if @user.skills.exclude? skill %>
                      <button type="button" class="btn btn-outline-warning m-2" data-toggle="modal" data-target="#skill-modal-<%= skill.id %>">
                        <%= skill.name %>
                      </button>
                    <% end %>
                  </div>
                <!-- modal -->
                    <div class="modal fade" id="skill-modal-<%= skill.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-body text-center">
                              <h1 class="m-3"><%= skill.name %></h1>
                              <img id="skill-logo" class="m-3" src=<%= skill.logo %>>
                                <p class="m-3"><%= skill.description %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- fin modal -->
                  <% end %>
                </div>
            </div>
          </div>
 <div id="Formations" class="d-none tab-content">
         <h4 class = "mb-4 text-center">  <strong>  Les formations pour devenir <%= @job.title %> </strong></h4>
          <% @job.formations.each do |formation|%>
            <div  data-toggle="modal" data-target="#school-modal-<%= formation.id %>">

              <img id="formation-logo" class= "rounded-logo" src=<%= formation.logo %>>
             <span class="pl-4"> <%= formation.title  %> </span>
            </div>
            <!-- MODAL -->
            <div class="modal fade" id="school-modal-<%= formation.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <% if formation.bookmarked %>
                        <%= link_to job_bookmark_formation_path(@job, formation_id: formation.id), method: :post, remote: true do %>
                          <i class="fas fa-bookmark star-user-formation" id="star-user-formation-<%= formation.id %>"><strong> Enlever des favoris</strong></i>
                        <% end %>
                      <% else %>
                        <%= link_to job_bookmark_formation_path(@job, formation_id: formation.id), method: :post, remote: true do %>
                          <i class="far fa-bookmark star-user-formation" id="star-user-formation-<%= formation.id %>"></i>
                        <% end %>
                      <% end %>
                  <div class="modal-header">
                    <div id="header-modal-formation">
                      <img class= "rounded-logo" src= <%= formation.logo %>>
                      <h3 class="modal-title" id="exampleModalLongTitle" class="text-center"><%= formation.title%></h3>
                    </div>
                  </div>
                  <div class="modal-body">

                    <p><%= formation.description %></p>
                    <p><strong> Lieux : </strong><%= formation.location%></p>
                    <p><strong> Dur√©e : </strong><%= formation.duration%></p>
                    <p> Pour en savoir plus sur cette formation : <a href=" <%=formation.website_url%>" class="tooltip-test" title="LinkSchool" target="_blank"> Le lien </a></p>


                    <div class="d-flex justify-content-center" data-aos="zoom-in">

                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- MODAL -->
          <%end%>
      </div>
<div id="Mentors" class="d-none tab-content">
       <div class = "text-center pb-2"> <h2> üîÜ Rencontrez des mentors</h2> </div>
        <% @mentors.each do |mentor| %>
          <div class="d-flex justify-content-around">
            <div class= "m-3 p-3 text-center">
              <div> <%= cl_image_tag mentor.profile_picture, class: "avatar-mentor"%> </div>
              <p class= "pt-1"> <a href="<%= mentor.Linkedin %>"  target= "_blank" style = "text-decoration: none; color: black"> <strong><%= mentor.first_name %> </strong></a> </br>
              <%= mentor.Company %> </br>
               <a href="<%= mentor.Linkedin %>" target= "_blank"><i class="fab fa-linkedin fa-2x"></i> </a> </p>

              </div>

                    <div class="pt-2 pb-2">
                      <p> <em>"<%= mentor.temoignage %>" </em></p>
                      <div class = "text-center">
                        <p>  Son t√©moignage vous plait ? </br>
                         <i class="far fa-arrow-alt-circle-right"></i> <a href="<%= mentor.Linkedin %>" target= "_blank"> Contatez le sur Linkedin ! </a> </p>
                      </div>
                    </div>
              </div>
        <% end %>
  </div>
    <div class="mt-5 pt-5 mb-5 pb-5 text-center">
              <%= link_to "Revenir √† ma recherche", jobs_path, class: "btn-prk text-decoration-none" %>
            </div>
        </div>

    </div>

  </div>


</div>








