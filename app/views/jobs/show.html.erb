<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @job.job_photo %>);">
  <div class="container">
    <h1 class = "text-center"> <%= @job.title %></h1>
  </div>
</div>

<div class="main-container">
  <div class="row">
    <table class = "col-10">
      <tr>
         <td class= "pl-5 pb- 5">
          <p> <strong> Le métier </strong></p>
         </td>
         <td class= "pl-5 pb- 5">
          <%= @job.long_description %>
         </td>
      </tr>
      <tr>
       <td class= "pl-5 pb- 5">
         <p><strong> Les compétences </strong></p>
       </td>
       <td class= "pl-5">
        <% @job.skills.each do |skill| %>
          <%=skill.name %> ,
        <% end %>
       </td>
      </tr>
    </table>
  </div>

 <h2> FORMATIONS</h2>
  <div class="main-container">
    <div class="row">
      <% @job.formations.each do |formation|%>
        <div class="card-product col-6 mr-4">
          <%=cl_image_tag formation.logo %>
          <div class="card-product-infos">
            <h2><%= formation.title %></h2>
            <p> <em>Lieux : </em><%= formation.location%></p>
            <p> <em> Durée : </em><%= formation.duration%></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>








