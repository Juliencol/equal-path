<!-- This is the dashboard page -->
<div class="main-container">
  <ul class="list-inline tabs-underlined">
    <li>
      <a class="tab-underlined active" data-target="profile">Profil</a>
    </li>
    <li>
        <a class="tab-underlined" data-target="fav-jobs">Métiers favoris </a>
          <span class="badge badge-light">
            <%= @jobs.count %>
        </span>
    </li>
    <li>
        <a class="tab-underlined" data-target="fav-formations">Formations favorites</a>
        <span class="badge badge-light1" id="formationss"><%= @formations.count %></span>
    </li>
  </ul>

  <div class="tab-content main-container d-flex flex-column justify-content-center align-items-center" id="profile">
    <p class="text-center">age : <%= @user.age %></p>
    <div class="d-flex">
      <p class="mt-3 text-center">Compétences acquises :</p>
      <div class="d-flex">
        <% @user.skills.each do |skill| %>
          <div class="d-flex justify-content-around">
            <button class="btn btn-outline-success m-2" data-toggle="modal" data-target="#skill-modal-<%= skill.id %>">
              <%= skill.name %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container">
      <div class="d-flex justify-content-center" data-aos="zoom-in">
        <%= link_to "Modifier le profil", edit_user_path(@user), class: "btn-prk text-decoration-none" %>
      </div>
    </div>
  </div>

  <div id="fav-jobs" class="d-none tab-content container mt-5">
    <% if @jobs == [] %>
      <p> Vous n'avez pas de métiers en favoris </p>
    <% else %>
      <% @jobs.each do |job| %>
        <div class="card-product">
          <img src=<%= job.job_photo %> />
            <div class="card-product-infos">
              <h2><%= job.title %> (<%= job.field %>)</h2>
              <p><%= job.short_description %></p>
              <div class="d-flex align-items-center">
                <p><strong>Skills required:</strong></p>
                <% if job.skills == [] %>
                  <p class="ml-3">Aucune compétence requise</p>
                <% else %>
                  <% job.skills.each do |job_skill| %>
                    <p class="ml-3 skill-name" data-toggle="modal" data-target=<%="#exampleModal-#{job_skill.id}"%>>
                      <%= job_skill.name %>
                    </p>
                    <div class="modal fade skill-modal" id=<%="exampleModal-#{job_skill.id}"%> tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <h2 class="modal-title text-center mt-5" id="exampleModalLabel"><%= job_skill.name %></h2>
                          <p class="m-5"><%= job_skill.description %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= link_to "", job_path(job), class: "transparent-link" %>
        </div>
        <p><%= link_to 'Enlever des favoris', job_remove_from_fav_path(job), method: :post, data: { confirm: 'Are you sure?' } %></p>
      <% end %>
    <% end %>
  </div>

  <div id="fav-formations" class="d-none tab-content container mt-5 d-none">
    <% @formations.each do |formation| %>
      <div class="card-product">
        <img id="card-formation-img"  src=<%= formation.logo %> />
        <div class="card-product-infos">
          <h2><%= formation.title %> (<%= formation.field %>)</h2>
          <p><%= formation.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>


