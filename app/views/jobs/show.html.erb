$<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @job.job_photo %>);">
  <h1 class="text-center"><%= @job.title %></h1>
</div>

<div class="main-container">
  <ul class="list-inline tabs-underlined">
    <li>
      <a href="#" class="tab-underlined active" data-target="Fiche">Ficher m√©tier</a>
    </li>
    <li>
      <a href="#" class="tab-underlined" data-target="Formations">Formations</a>
    </li>
    <li>
