<div class="main-container d-flex flex-column justify-content-center align-items-center">
  <h1 class="text-center">Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
  <p class="text-center">age : <%= @user.age %></p>
  <div class="d-flex">
    <p class="mt-3 text-center">Comp√©tences acquises :</p>
    <div class="d-flex">
      <% @user.skills.each do |skill| %>
        <div class="d-flex justify-content-around">
          <button class="btn btn-outline-success m-2" data-toggle="modal" data-target="#skill-modal-<%= skill.id %>">
            <%= skill.name %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="d-flex justify-content-center" data-aos="zoom-in">
      <%= link_to "Retour au Tableau de bord", users_path, class: "btn-prk text-decoration-none" %>
      <%= link_to "Modifier le profil", edit_user_path, class: "btn-prk text-decoration-none" %>
    </div>
  </div>
</div>



