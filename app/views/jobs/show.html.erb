    </li>
  </ul>






  <div class="tab-content" id="Fiche">
    <div id="top-block" class="container d-flex p-3">
      <div id="left-block" class="container d-flex flex-column mr-3">
        <div class="d-flex">
          <h2 class = "mb-5"> üìù Description du m√©tier</h2>
        </div>
          <p><%= @job.long_description %></p>

      </div>

      <div class="">
        <% if @job.bookmarked %>
          <%= link_to job_bookmark_job_path(@job), method: :post do %>
            <i class="fas fa-star" id="star"></i>
            <p>Enlever des favoris</p>
          <% end %>
        <% else %>
          <%= link_to job_bookmark_job_path(@job), method: :post do %>
            <i class="far fa-star" id="star"></i>
            <p>Ajouter aux favoris</p>
          <% end %>
        <% end %>
      </div>
        <p><%= @job.long_description %></p>
    </div>
    <div id="right-block" class="container d-flex flex-column ml-3">
      <div class="mb-3 container d-flex">
        <div>
          <div class="d-flex align-items-center">
            <h2> üíé Comp√©tences requises</h2>
          </div>
          <div class="container d-flex mt-5 justify-content-between">
            <div>
              <h4 class="mb-3">Strong skills</h4>
              <div class="d-flex flex-column justify-content-between">
                <% @job.skills.each do |skill| %>
                  <% unless skill.soft %>
                    <ul>
                      <li data-toggle="modal" data-target="#skill-modal-<%= skill.id %>">
                        <%= skill.name %>
                      </li>
                      <!-- skill Modal -->
                      <div class="modal fade" id="skill-modal-<%= skill.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-body text-center">
                              <h1 class="m-3"><%= skill.name %></h1>
                              <img id="skill-logo" class="m-3" src=<%= skill.logo %>>
                              <p class="m-3"><%= skill.description %></p>
                            </div>
                          </div>
                        </div>
                      </ul>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div>
                <h4 class="mb-3">Soft skills</h4>
                <div class="d-flex flex-column justify-content-between">
                  <% @job.skills.each do |skill| %>
                    <% if skill.soft %>
                      <ul><li><%= skill.name %></li></ul>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="Formations" class="d-none tab-content">
    <div class="container d-flex flex-column mt-5">
      <div class="d-flex align-items-center">
        <h2 class=""> üéì Formations recommand√©es</h2>
      </div>
      <div id="logo-container" class="container d-flex">
        <% @job.formations.each do |formation|%>
          <div class="container" data-toggle="modal" data-target="#school-modal-<%= formation.id %>">
            <img id="formation-logo" class= "rounded-logo" src=<%= formation.logo %>>
          </div>
          <div class="modal fade" id="school-modal-<%= formation.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <div id="header-modal-formation">
                    <img class= "rounded-logo" src= <%= formation.logo %>>
                    <h3 class="modal-title" id="exampleModalLongTitle" class="text-center"><%= formation.title%></h3>
                  </div>
                </div>
                <div class="modal-body">
                  <p><%= formation.description %></p>
                  <p><strong> Lieux : </strong><%= formation.location%></p>
