<div class="main-container d-flex flex-column align-items-center justify-content-center">
  <div class="container d-flex flex-column align-items-center m-3">
    <h2 class="mt-3 mb-3">Sélectionnez vos compétences</h2>
    <div class="container d-flex flex-wrap justify-content-center">
      <% @skills.each do |skill| %>
        <% unless current_user.skills.include? skill %>
          <%= link_to skill.name, skill_update_skill_path(skill), method: :post, remote: true, class: "skill-btn m-2 skill-#{skill.id}" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= link_to "Découvrir les métiers", jobs_path, class: "btn-julien" %>
</div>
